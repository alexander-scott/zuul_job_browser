{
  "name": "zuulplugin",
  "displayName": "Zuul Job Browser",
  "publisher": "alexander-scott",
  "repository": "https://github.com/Alexander-Scott/zuulplugin",
  "description": "Navigate through Zuul Configuration in VSCode more easily with this plugin.",
  "version": "0.3.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "zuulplugin",
        "properties": {
          "zuulplugin.general.jobParsingConfig": {
            "type": "string",
            "enum": [
              "allJobsInWorkspace",
              "onlyOpenJobFiles"
            ],
            "default": "allJobsInWorkspace",
            "description": "Configuration as to how the plugin will parse your jobs. The default is allJobsInWorkspace but onlyOpenJobFiles should be selected when using the plugin over Remote SSH as allJobsInWorkspace as the parser has to open and read each file."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "zuulplugin.rebuild-hierarchy",
        "title": "Zuul Plugin Rebuild Job Hierarchy"
      },
      {
        "command": "zuulplugin.clear-cache",
        "title": "Zuul Plugin Clear Job Hierarchy Cache"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint && npm run copy-test-files",
    "copy-test-files": "rm -rf ./out/test/suite/test_files/ || true && cp -rv ./src/test/suite/test_files/ ./out/test/suite/test_files/",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/js-yaml": "^3.12.3",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "class-transformer": "^0.2.3",
    "js-yaml": "^3.13.1",
    "reflect-metadata": "^0.1.13",
    "vscode-cache": "^0.3.0"
  }
}
